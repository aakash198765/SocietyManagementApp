<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    tools:context=".LocalServices">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Services"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
       />

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/electricity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:text=">> ELECTRICITY"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/waterSupply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="170dp"
            android:text=">> WATER SUPPLY"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/wifiConnectivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="210dp"
            android:text=">> WIFI CONNECTIVITY"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/wasteManagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="250dp"
            android:text=">> WASTE MANAGEMENT"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/otherServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="290dp"
            android:text=">> OTHER SERVICES"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="700dp"
            android:text="Services will be keep updating in the notice"
            android:textColor="#ffffff"
            android:textSize="18dp" />



        </RelativeLayout>







</RelativeLayout>